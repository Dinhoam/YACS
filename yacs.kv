#:kivy 1.9.0
#:import get_asset_path utils.get_asset_path
#:set COLOR_HIGHLIGHT (0.788235294, 0.643137255, 1)
#:set COLOR_BACKGROUND (0.349019608, 0.082352941, 0.658823529)
#:set COLOR_BACKGROUND_A50 (0.349019608, 0.082352941, 0.658823529, .5)
#:set COLOR_BORDER (0.643137255, 0.160784314, 1)
#:set COLOR_BORDER_A50 (0.643137255, 0.160784314, 1, .5)
#:set COLOR_BORDER_A75 (0.643137255, 0.160784314, 1, .75)
#:set COLOR_HIGHLIGHT_A50 (0.788235294, 0.643137255, 1, .5)
#:set COLOR_HIGHLIGHT_A75 (0.788235294, 0.643137255, 1, .75)
#:set COLOR_HIGHLIGHT_A100 (0.788235294, 0.643137255, 1, 1.0)
#:set COLOR_BACKGROUND_A100 (0.349019608, 0.082352941, 0.658823529, 1.0)
#:set COLOR_BORDER_A100 (0.643137255, 0.160784314, 1, 1.0)

YACSGame:

<YACSGame>:
    gameworld: gameworld
    GameWorld:
        id: gameworld
        gamescreenmanager: gamescreenmanager
        size_of_gameworld: 600*1024
        system_count: 34
        zones: {'general': 10000, 'particles': 10000, 'ships': 50, 'projectiles': 5000}
        model_format_allocations: {'vertex_format_2f4ub': (50000*1024, 50000*1024), 'vertex_format_4f': (10000*1024, 10000*1024), 'vertex_format_9f4ub': (10000*1024, 10000*1024)}
        PositionSystem2D:
            system_id: 'position'
            gameworld: gameworld
            zones: ['general', 'particles', 'ships', 'projectiles']
        RotateSystem2D:
            gameworld: gameworld
            zones: ['general', 'particles', 'ships', 'projectiles']
        ScaleSystem2D:
            gameworld: gameworld
            zones: ['general', 'particles', 'ships']
        ColorSystem:
            gameworld: gameworld
            zones: ['general', 'particles', 'ships']
        ColorSystem:
            gameworld: gameworld
            system_id: 'radar_color'
            zones: ['general', 'ships']
        PlayerSystem:
            do_components: False
            system_id: 'player'
            gameworld: gameworld
            camera_system: camera_top
            physics_system: physics
            id: player
            sound_manager: gameworld.sound_manager
            weapon_system: weapons
        GameView:
            gameworld: gameworld
            id: camera_stars1
            system_id: 'camera_stars1'
            camera_pos: (camera_top.camera_pos[0])*.4, (camera_top.camera_pos[1])*.4
            touch_pass_through: True
            do_scroll_lock: False
            window_size: root.size
            size: root.size
        GameView:
            gameworld: gameworld
            id: camera_stars2
            system_id: 'camera_stars2'
            window_size: root.size
            do_scroll_lock: False
            camera_pos: (camera_top.camera_pos[0])*.5, (camera_top.camera_pos[1])*.5
            touch_pass_through: True
            size: root.size
        GameView:
            gameworld: gameworld
            id: camera_sun1
            system_id: 'camera_sun1'
            window_size: root.size
            camera_pos: (camera_top.camera_pos[0])*.66, (camera_top.camera_pos[1])*.66
            touch_pass_through: True
            do_scroll_lock: False
            size: root.size
        GameView:
            gameworld: gameworld
            id: camera_sun2
            system_id: 'camera_sun2'
            window_size: root.size
            camera_pos: (camera_top.camera_pos[0])*.75, (camera_top.camera_pos[1])*.75
            touch_pass_through: True
            do_scroll_lock: False
            size: root.size
        GameMap:
            system_id: 'map'
            id: map
            map_size: (2500., 2500.)
        GameMap:
            system_id: 'g_map'
            id: g_map
            map_size: (2500., 2500.)
        GameMap:
            id: world_map
            system_id: 'world_map'
            map_size: [global_map.world_size*global_map.cell_size]*2
        GameView:
            gameworld: gameworld
            id: camera_planet1
            system_id: 'camera_planet1'
            window_size: root.size
            camera_pos: (camera_top.camera_pos[0])*.83, (camera_top.camera_pos[1])*.83
            do_scroll_lock: False
            touch_pass_through: True
            size: root.size
        GameView:
            gameworld: gameworld
            do_scroll: True
            do_scroll_lock: True
            touch_pass_through: True
            id: camera_top
            size_hint: (None, None)
            camera_pos: (-500., -500.)
            system_id: 'camera_planet2'
            size: root.size
            currentmap: map
            window_size: root.size
            render_system_order: ['shield_renderer', 'rotate_renderer','particle_renderer', 'planet2']
        GameView:
            gameworld: gameworld
            do_scroll: True
            do_scroll_lock: True
            id: grid_camera
            system_id: 'grid_camera'
            size: root.size
            window_size: root.width * .6, root.height * .6
            pos: root.width * .2, root.height *.3
            currentmap: g_map
            camera_scale: 4.
            render_system_order: ['radar_renderer', 'map_grid']
            canvas.before:
                ScissorPush:
                    size: self.window_size
                    pos: self.pos

            canvas.after:
                ScissorPop:
        GameView:
            gameworld: gameworld
            do_scroll: True
            do_scroll_lock: True
            id: global_camera
            system_id: 'global_camera'
            size: root.size
            window_size: root.size
            pos: root.pos
            currentmap: world_map
            camera_scale: 1.
            do_touch_zoom: True
            scale_min: .2
            scale_max: 5.
            render_system_order: ['global_map_renderer2', 'global_map_planet_renderer', 'global_map_renderer', 'world_grid']

        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'back_stars'
            zones: ['general']
            static_rendering: True
            max_batches: 5
            gameview: 'camera_stars1'
            size_of_batches: 512
            force_update: True
            system_names: ['back_stars', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'mid_stars'
            zones: ['general']
            static_rendering: True
            max_batches: 5
            force_update: True
            gameview: 'camera_stars2'
            size_of_batches: 512
            system_names: ['mid_stars', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'sun1'
            zones: ['general']
            static_rendering: True
            force_update: True
            max_batches: 10
            gameview: 'camera_sun1'
            size_of_batches: 768
            system_names: ['sun1', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'sun2'
            zones: ['general']
            static_rendering: True
            force_update: True
            max_batches: 10
            gameview: 'camera_sun2'
            size_of_batches: 768
            system_names: ['sun2', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            zones: ['general']
            system_id: 'planet1'
            gameview: 'camera_planet1'
            force_update: True
            static_rendering: True
            max_batches: 10
            size_of_batches: 768
            system_names: ['planet1', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'planet2'
            zones: ['general']
            force_update: True
            static_rendering: True
            max_batches: 10
            gameview: 'camera_planet2'
            size_of_batches: 768
            system_names: ['planet2', 'position']
            frame_count: 1
        ParticleSystem:
            id: particles
            gameworld: gameworld
            zones: ['particles']
            particle_zone: 'particles'
        ParticleRenderer:
            gameworld: gameworld
            zones: ['particles']
            shader_source: get_asset_path('assets', 'shaders', 'positionrotatecolorscale.glsl')
            frame_count: 3
            max_batches: 20
            size_of_batches: 1024
            gameview: 'camera_planet2'
            updateable: True
        EmitterSystem:
            id: emitter
            gameworld: gameworld
            zones: ['ships', 'projectiles', 'general']
            particle_system: particles.__self__
        CymunkPhysics:
            gameworld: root.gameworld
            zones: ['ships', 'projectiles', 'general']
            updateable: True
            id: physics
        SteeringSystem:
            zones: ['ships']
            gameworld: root.gameworld
            updateable: True
        SteeringAISystem:
            zones: ['ships']
            gameworld: root.gameworld
            physics_system: physics.__self__
        WeaponAISystem:
            zones: ['ships']
            gameworld: root.gameworld
            physics_system: physics.__self__
        RotateRenderer:
            zones: ['ships', 'projectiles', 'general']
            gameworld: gameworld
            max_batches: 20
            frame_count: 3
            updateable: True
            gameview: 'camera_planet2'
            shader_source: get_asset_path('assets', 'shaders', 'positionrotateshader.glsl')
        ColorPolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'shield_renderer'
            zones: ['ships']
            static_rendering: False
            max_batches: 10
            gameview: 'camera_planet2'
            size_of_batches: 768
            system_names: ['shield_renderer', 'position', 'color']
            frame_count: 2
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'map_grid'
            zones: ['general']
            force_update: True
            static_rendering: True
            max_batches: 5
            gameview: 'grid_camera'
            size_of_batches: 768
            system_names: ['map_grid', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'world_grid'
            zones: ['general']
            gameview: 'global_camera'
            force_update: True
            static_rendering: True
            max_batches: 5
            size_of_batches: 768
            system_names: ['world_grid', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'global_map_renderer'
            zones: ['general']
            static_rendering: True
            force_update: True
            max_batches: 10
            gameview: 'global_camera'
            size_of_batches: 768
            system_names: ['global_map_renderer', 'position']
            frame_count: 1
        PolyRenderer:
            gameworld: gameworld
            shader_source: get_asset_path('assets', 'shaders', 'poscolorshader.glsl')
            system_id: 'global_map_planet_renderer'
            zones: ['general']
            static_rendering: True
            force_update: True
            max_batches: 10
            gameview: 'global_camera'
            size_of_batches: 768
            system_names: ['global_map_planet_renderer', 'position']
            frame_count: 1
        RotateColorRenderer:
            zones: ['general']
            gameworld: gameworld
            max_batches: 10
            frame_count: 1
            system_id: 'global_map_renderer2'
            static_rendering: True
            force_update: True
            gameview: 'global_camera'
            system_names: ['global_map_renderer2', 'position', 'rotate', 'color']
            shader_source: get_asset_path('assets', 'shaders', 'positionrotatecolorshader.glsl')
        GlobalMapSystem:
            gameworld: gameworld
            zones: ['general']
            id: global_map
            size: root.size
            pos: root.pos
            gameview: 'global_camera'
        RotateColorRenderer:
            zones: ['ships', 'general']
            gameworld: gameworld
            max_batches: 20
            system_id: 'radar_renderer'
            frame_count: 3
            updateable: True
            size_of_batches: 768
            gameview: 'grid_camera'
            system_names: ['radar_renderer', 'position', 'rotate', 'radar_color']
            shader_source: get_asset_path('assets', 'shaders', 'positionrotatecolorshader.glsl')
        ShipSystem:
            zones: ['ships']
            do_components: True
            system_id: 'ship_system'
            id: ship_system
            explosion_system: explosions
            gameworld: gameworld
            camera_system: camera_top
            player_system: player
        ProjectileSystem:
            gameworld: gameworld
            id: projectiles
            zones: ['projectiles']
            emitter_system: emitter
            physics_system: physics
            combat_stats_system: combat_stats
            player_system: player
        ProjectileWeaponSystem:
            zones: ['ships']
            id: weapons
            gameworld: gameworld
            player_entity: player.current_entity
            player_system: player
            sound_distance: 2000.
            projectile_system: projectiles.__self__
        CombatStatsSystem:
            id: combat_stats
            gameworld: gameworld
            zones: ['ships', 'projectiles', 'general']
        LifespanSystem:
            id: lifespan
            gameworld: gameworld
            zones: ['projectiles', 'general']
        AsteroidSystem:
            id: asteroids
            gameworld: gameworld
            explosion_system: explosions
            player_system: player
        ExplosionSystem:
            id: explosions
            gameworld: gameworld
            zones: ['general']
        ShieldSystem:
            id: shields
            gameworld: gameworld
            zones: ['ships']
            physics_system: physics
            player_system: player
            combat_stats_system: combat_stats
    GameScreenManager: 
        id: gamescreenmanager
        size: root.size
        pos: root.pos
        gameworld: gameworld
        MainScreen:
            current_health: player.current_health
            total_health: player.total_health
            current_shields: player.current_shields
            total_shields: player.total_shields
            current_ammo: player.current_ammo
            total_ammo: player.total_ammo
            weapon_name: player.current_weapon_name
        MapScreen:
        JumpScreen:


<JumpScreen>:
    name: 'jump'
    Button:
        text: 'Close'
        pos_hint: {'x': .025, 'y': .9}
        size_hint: (.15, .085)
        on_release: app.root.set_state('main')

<MapScreen>:
    name: 'map'
    Button:
        text: 'Close'
        pos_hint: {'x': .025, 'y': .9}
        size_hint: (.15, .085)
        on_release: app.root.set_state('main')
    Button:
        text: 'Jump'
        pos_hint: {'x': .025, 'y': .025}
        size_hint: (.15, .085)
        on_release: app.root.set_state('worldmap')


<MainScreen>:
    name: 'main'
    FloatLayout:
        Button:
            text: 'Minimap'
            pos_hint: {'x': .025, 'y': .9}
            size_hint: (.15, .085)
            on_release: app.root.set_state('minimap')
        DebugPanel:
            size_hint: (.15, .1)
            pos_hint: {'x': .005, 'y': .025}
    FloatLayout:
        size_hint: (.25, None)
        x: (root.width - self.width) / 2.
        y: self.height + dp(5.)
        height: health.height + ammo.height + shields.height
        id: stats
        HealthBar:
            id: health
            size_hint: (1.0, None)
            height: dp(25.)
            x: stats.x
            y: stats.y + stats.height - dp(40.)
            current_health: root.current_health
            total_health: root.total_health
        ShieldBar:
            id: shields
            size_hint: (1.0, None)
            height: dp(5.)
            x: stats.x
            y: stats.y + stats.height - dp(50.)
            current_shields: root.current_shields
            total_shields: root.total_shields
        AmmoBar:
            id: ammo
            size_hint: (.5, None)
            height: dp(20.)
            x: stats.x
            y: stats.y + stats.height - dp(75.)
            current_ammo: root.current_ammo
            total_ammo: root.total_ammo
            weapon_name: root.weapon_name


<DebugPanel>:
    Label:
        pos: root.pos
        size: root.size
        font_size: root.size[1]*.5
        halign: 'center'
        valign: 'middle'
        color: (1,1,1,1)
        text: 'FPS: ' + root.fps if root.fps != None else 'FPS:'


<HealthBar>:

    size_hint: (1.0, 1.0)
    canvas:
        Color:
            rgba: COLOR_BACKGROUND_A50
        Rectangle: 
            pos: self.pos
            size: self.size
        Color:
            rgba: COLOR_HIGHLIGHT_A50
        Rectangle:
            pos: self.pos
            size: ((root.health_percentage)*self.size[0], self.size[1])
        Color:
            rgba: COLOR_BORDER_A50
        Line:
            width: 2.
            rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1])
            joint: 'bevel'

<ShieldBar>:

    size_hint: (1.0, 1.0)
    canvas:
        Color:
            rgba: COLOR_HIGHLIGHT_A75
        Rectangle:
            pos: self.pos
            size: (root.shield_percentage*self.size[0], self.size[1])

<AmmoBar>:
    orientation: 'horizontal'
    spacing: dp(5.)
    Label:
        text: str(root.current_ammo)
        size_hint: (.4, 1.0)
        halign: 'left'
    Label:
        text: str(root.total_ammo)
        size_hint: (.6, 1.0)
        halign: 'left'

